<% @posts.each_with_index  do |post, index| %>
  <div 
    <% if index == @posts.size - 1 %>
      hx-get="/posts/more?offset=<%=@next_offset%>&search_query=<%=@search_query%>&order_by=<%=@order_by%>&limit=<%=@limit%><%= @channel_ids&.map { |id| "&channel_ids[]=#{id}" }&.join %><%= @user_ids&.map { |id| "&user_ids[]=#{id}" }&.join %>" 
      hx-trigger="revealed" 
      hx-swap="afterend"
    <% end %>
  >
    <%= PostComponent(post, true, @user_id) %>
  </div>
<% end %>