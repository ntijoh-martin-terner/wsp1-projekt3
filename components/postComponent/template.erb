<div class="w-full bg-white border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 flex flex-col items-center text-center">
  <!-- Header: Channel and User -->
  <div class="w-full p-4 bg-gray-100 dark:bg-gray-900 border-b dark:border-gray-700">
    <div class="flex justify-between items-center w-full max-w-2xl mx-auto">
      <span class="text-sm font-medium text-gray-600 dark:text-gray-400">
        <a href="/channel/<%= @post['channel_id'] %>" class="hover:underline">
          <%= @post['channel_name'] || 'Unknown Channel' %>
        </a>
      </span>
      <span class="text-sm font-medium text-gray-600 dark:text-gray-400">
        Posted by <a href="/user/<%= @post['user_id'] %>" class="hover:underline">@<%= @post['username'] || 'Anonymous' %></a>
      </span>
    </div>
  </div>

  <!-- Post Content -->
  <div class="w-full flex flex-col items-center p-5 space-y-4">
    <!-- Media (Optional) -->
    <% if @post['media_url'] %>
      <a href="/post/<%= @post['id'] %>" class="block w-full max-w-2xl">
        <img class="w-full h-64 object-cover rounded-lg" src="<%= @post['media_url'] %>" alt="Post media" />
      </a>
    <% end %>

    <!-- Title -->
    <a href="/post/<%= @post['id'] %>" class="w-full max-w-2xl">
      <h5 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white">
        <%= truncate(@post['content'], length: 50) %>
      </h5>
    </a>

    <!-- Excerpt -->
    <p class="w-full max-w-2xl font-normal text-gray-700 dark:text-gray-400">
      <%= truncate(@post['content'], length: 150) %>
    </p>

    <div class="flex flex-col space-y-3">
      <!-- Row 1: Votes and Comments -->
      <div class="flex items-center justify-between space-x-6 text-gray-500 dark:text-gray-400">

        <!-- Votes Section -->
        <div class="flex items-center space-x-2">
          <div class="flex flex-col items-center">
            <!-- Upvote/Downvote Buttons -->
            <%= VoteComponent("/post/#{@post['id']}", @vote_count, @user_vote) %>
          </div>
          <span class="text-gray-800 dark:text-white font-semibold">
            <%= @votes %> Votes
          </span>
        </div>

        <!-- Comments Section -->
        <div class="flex items-center space-x-2">
          <a href="/post/<%=@post['id']%>" class="flex items-center hover:text-blue-500">
            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M3 6a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2h-6.616l-2.88 2.592C8.537 20.461 7 19.776 7 18.477V17H5a2 2 0 0 1-2-2V6Zm4 2a1 1 0 0 0 0 2h5a1 1 0 1 0 0-2H7Zm8 0a1 1 0 1 0 0 2h2a1 1 0 1 0 0-2h-2Zm-8 3a1 1 0 1 0 0 2h2a1 1 0 1 0 0-2H7Zm5 0a1 1 0 1 0 0 2h5a1 1 0 1 0 0-2h-5Z" clip-rule="evenodd"/>
            </svg>
            <span class="text-gray-800 dark:text-white font-semibold">
              <%= @comment_count %> Comments
            </span>
          </a>
        </div>
      </div>

      <!-- Row 2: Separator -->
      <hr class="border-t border-gray-300 dark:border-gray-700">

      <!-- Optional Row 3: Additional Metadata -->
      <div class="text-sm text-gray-500 dark:text-gray-400">
        <p>Posted on: <%= @post['created_at'] %> â€¢ <%= time_ago_in_words(Time.parse(@post['created_at'])) %></p>
      </div>
    </div>
  </div>
  <!-- Footer: Time Ago -->
</div>
