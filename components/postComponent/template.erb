<div class="w-full bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
    <!-- Post Media -->
    <% if @post['media_url'] %>
        <a href="#">
            <img class="rounded-t-lg object-cover w-full h-56" src="<%= @post['media_url'] %>" alt="Post media" />
        </a>
    <% end %>

    <div class="p-5">
        <!-- Post Title -->
        <a href="#">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                <%= truncate(@post['content'], length: 50) %>
            </h5>
        </a>

        <!-- Post Content -->
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
            <%= truncate(@post['content'], length: 150) %>
        </p>

        <!-- Metadata -->
        <div class="mb-3 flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400">
            <span>💬 <%= @comment_count %> comments</span>
            <span>👍 <%= @post['upvotes'] %> upvotes</span>
            <span>👎 <%= @post['downvotes'] %> downvotes</span>
        </div>

        <!-- Read More Button -->
        <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
            Read more
            <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9" />
            </svg>
        </a>
    </div>
</div>
