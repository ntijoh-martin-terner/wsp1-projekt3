<!-- Filtering Section -->
<div class="p-6">
  <form method="get" action="<%=@post_path%>" class="flex flex-col sm:flex-row gap-4">
    <!-- Search Input -->
    <div class="w-full">
      <label for="search" class="block text-sm font-medium text-gray-900 dark:text-gray-300">Search Posts</label>
      <input 
        type="text" 
        name="search" 
        id="search" 
        value="<%= @params.nil? ? '' : @params[:search] %>" 
        placeholder="Search posts..." 
        class="w-full border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-100 rounded-lg shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50"
      />
    </div>

    <!-- Sort Options -->
    <%if !@params.nil?%>
      <div class="w-full sm:w-1/3">
        <label for="sort" class="block text-sm font-medium text-gray-900 dark:text-gray-300">Sort By</label>
        <select 
          name="sort" 
          id="sort" 
          class="w-full border-gray-300 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-100 rounded-lg shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-300 focus:ring-opacity-50"
        >
          <option value="recent" <%= "selected" if @params[:sort] == "recent" %>>Most Recent</option>
          <option value="upvotes" <%= "selected" if @params[:sort] == "upvotes" %>>Most Upvoted</option>
          <option value="downvotes" <%= "selected" if @params[:sort] == "downvotes" %>>Most Downvoted</option>
        </select>
      </div>
    <%end%>

    <!-- Submit Button -->
    <div class="w-full sm:w-auto">
      <label class="block text-sm font-medium text-gray-900 dark:text-gray-300 whitespace-nowrap invisible">Apply Filters</label>
      <button 
        type="submit" 
        class="w-full sm:w-auto px-4 py-2 bg-blue-500 text-white dark:text-white rounded-lg shadow-sm hover:bg-blue-600 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50"
      >
        Apply
      </button>
    </div>
  </form>
</div>
