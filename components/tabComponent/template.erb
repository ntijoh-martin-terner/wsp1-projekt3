<div class="sm:hidden">
    <label for="<%=@tabs_name%>" class="sr-only">Select post feed type</label>
    <select id="<%=@tabs_name%>" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
        <%@tabs.each_with_index do |(tab_name, tab_url), tab_index|%>
            <li class="w-full focus-within:z-10">
                <option value="<%=tab_url%>"><%=tab_name%></option>
            </li>
        <%end%>
    </select>
</div>

<script>
    document.getElementById('<%=@tabs_name%>').addEventListener('change', function() {
        window.location = this.value;
    });
</script>

<ul class="hidden text-sm font-medium text-center text-gray-500 shadow-sm sm:flex dark:divide-gray-700 dark:text-gray-400">
    <%@tabs.each_with_index do |(tab_name, tab_url), tab_index|%>
        <li class="w-full focus-within:z-10">
            <a href="<%=tab_url%><%= @query %>" class="inline-block w-full p-4 border-r border-gray-200 dark:border-gray-700 focus:ring-4 focus:ring-blue-300 active focus:outline-none <%= tab_index == @current_page_index ? "dark:text-white bg-gray-100 dark:bg-gray-700 text-gray-900" : "dark:bg-gray-800 dark:hover:text-white dark:hover:bg-gray-700" %>" <%= "aria-current='page'" if tab_index == @current_page_index %>><%=tab_name%></a>
        </li>
    <%end%>
</ul>